<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="user"
            type="com.fsz.integrationdemo.databinding.User"/>
        <variable
            name="event"
            type="com.fsz.integrationdemo.databinding.Event"/>
    </data>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@{user.name}"
        android:onClick="@{event.show}"/>

</LinearLayout>
</layout>